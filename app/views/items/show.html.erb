<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% if @item.medium_image.present? %>
            <%= image_tag((@item.medium_image).gsub('?_ex=128x128', '')) %>
          <% else %>  
            <%= image_tag("no-image.png" , alt: @item.title) %>
          <% end %>  
        </div>
      </div>
      <div class="title">
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% @item.have_users.each do |have_user| %>
          <div class="icon">
            <%= link_to(gravatar_for(have_user, size: 24), have_user) %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% @item.want_users.each do |want_user| %>
          <div class="icon">
             <%= link_to(gravatar_for(want_user, size: 24), want_user) %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to('楽天詳細ページへ', @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
